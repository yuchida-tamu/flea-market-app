<% if current_user.is_favorite?(product) %>
    <%= form_with(model: current_user.favoritelists.find_by(product_id: product.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :product_id, product.id %>
            <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favoritelists.build, local: true) do |f| %>
            <%= hidden_field_tag :product_id, product.id %>
            <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
<% end %>